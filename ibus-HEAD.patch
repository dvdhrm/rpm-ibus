+static gboolean
+unicode_emoji_test_parse_file (const gchar *filename,
+                               GSList      **list)
+{
+    gchar *content = NULL;
+    gsize length = 0;
+    GError *error = NULL;
+    gchar *head, *end, *line;
+    int n = 1;
+    EmojiData data = { 0, };
